body
  padding-top: 70px

.navbar-collapse
  overflow: hidden

table
  .editable
    width: 130px
    padding: 0 5px 1px 5px
    background: transparent

  input.editable
    border-bottom: 1px solid #999
    border-top: 0
    border-left: 0
    border-right: 0

.player-table
  .index
    text-align: center

  th.name
    padding: 5px 10px

.setup-table
  .header
    background: #eee
  .total
    background: #ddd

  .number
    margin: 0 .5em

  input
    display: inline
    margin: 0px 0px 0px 5px
    vertical-align: middle

    &[type=checkbox]
      width: 20px
    &[type=range]
      width: 100px

.player-info
  &.dead
    opacity: .2
    text-decoration: strike-through

.status-icon
  width: 24px
  height: 24px
  margin: 0 2px

  &.capability
    background: tan

  &.status
    background: skyblue
    &.status-dead
      background: pink

  &.canceled
    opacity: .2

input[type=checkbox].switch-box
  position: relative

  switch-component()
    content: ''
    display: inline-block
    position: absolute
    border-radius: 4px

  &:before
    switch-component()
    width: 35px
    height: 20px
    top: -4px
    left: -2px
    border: 1px solid #ccc
    background: #ccc
    transition: background .3s ease-in-out

  &:after
    switch-component()
    width: 18px
    height: 18px
    top: -3px
    left: -1px
    border: 1px solid #eee
    background: #fff
    transition: left .3s ease-in-out

  &:checked:before
    background: #53bafe

  &:checked:after
    left: 14px

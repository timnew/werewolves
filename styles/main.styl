body
  padding-top: 70px

.navbar-collapse
  overflow: hidden

input.table-inline
  width: 100px
  border: 0 1px 1px 1px
  border-bottom: 1px solid #999
  border-top: 0
  border-left: 0
  border-right: 0
  padding: 0 5px 1px 5px
  background: transparent

.setup-table
  .sub-total
    background: #eee
  .total
    background: #ddd

  input
    display: inline
    margin: 0px 0px 0px 5px
    vertical-align: middle

    &[type=checkbox]
      width: 20px
    &[type=range]
      width: 100px

.player-info
  &.dead
    opacity: .2
    text-decoration: strike-through

.status-icon
  width: 24px
  height: 24px
  margin: 0 2px

  &.capability
    background: tan

  &.status
    background: skyblue
    &.status-dead
      background: pink

  &.canceled
    opacity: .2
